<%= form_for @recipe do |f| %>
  <p>Title: <%= f.text_field :title %></p>
  <p>Ingredients:<br>
  <%= f.fields_for :ingredients do |ingr| %>
    <%= ingr.label :name%>
    <%= ingr.text_field :name%>
    <%= ingr.label :quantity%>
    <%= ingr.text_field :quantity%><br>
  <% end%></p>
  <%= f.submit "#{action} Recipe!" %>
<% end %>
